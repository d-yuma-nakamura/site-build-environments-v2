---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="wrapper">
      <div class="sidebar">
        <nav class="menu">
          <h3>タグ</h3>
          <ul>
            <li class="current"><a href="#">#インフラ</a></li>
            <li><a href="#">#ソフトウェア設計</a></li>
            <li><a href="#">#DevOps</a></li>
            <li><a href="#">#フロントエンド</a></li>
            <li><a href="#">#バックエンド</a></li>
            <li><a href="#">#AWS</a></li>
            <li><a href="#">#Astro</a></li>
            <li><a href="#">#アルゴリズムとデータ構造</a></li>
          </ul>
        </nav>
      </div>
      <div class="content">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    width: 100%;
  }

  html {
    font-family: system-ui, sans-serif;
    /* background: whitesmoke; */
    background: linear-gradient(
      45deg,
      #252c35 0%,
      #252c35 60%,
      whitesmoke 50%,
      whitesmoke 100%
    );
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .wrapper {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    width: 70%;
    min-height: 100vh;
    margin: 100px auto;
    column-gap: 20px;
    grid-template-areas: "sd main main main main";
  }

  .sidebar {
    grid-area: sd;
    background-color: white;
    box-shadow: inset;
    border-radius: 1rem;
  }

  .menu {
    width: 90%;
    margin: 10px auto;
  }

  .menu ul li {
    list-style: none;
    display: inline-block;
    margin-top: 2em;
    font-size: medium;
  }

  .menu ul li a {
    text-decoration: none;
    color: #333;
  }

  .menu ul li a:hover {
    color: black;
  }

  .content {
    grid-area: main;
    background-color: white;
    box-shadow: inset;
  }
</style>
